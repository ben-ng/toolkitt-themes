<div class="span6 offset3">
  {{#if isLoggedIn}}
    <div class="alert alert-info">
      <h3>Welcome Back, {{user.username}}</h3>
      <p>You're now able to edit your website.</p>
      <a href="/" class="btn btn-info btn-wide">Go to homepage</a>
      <a href="/logout" class="btn btn-danger btn-wide">Log Out</a>
    </div>
  {{else}}
    {{#if user.error}}
      <div class="alert alert-error">
        {{user.error}}
      </div>
    {{/if}}
    <form>
      <div class="control-group">
        <input type="text" name="username" value="{{user.username}}" class="span6" placeholder="Username" />
      </div>
      <div class="control-group">
        <input type="password" name="password" value="{{user.password}}" class="span6" placeholder="Password" />
      </div>
      <div class="actions">
        <button type="submit" class="btn btn-primary btn-block">Log In</button>
      </div>
    </form>
  {{/if}}
</div>