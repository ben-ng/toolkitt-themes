<form>
  <fieldset>
    <legend>Edit {{page.name}}</legend>
    <label class="control-label" for="name">Page Title</label>
    <input type="text" id="name" name="name" placeholder="Untitled Page" value="{{page.name}}">
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-danger">Delete</a>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Sort Media</legend>
    <ul class="mediagrid sortable">
    {{#each media}}
      <li class="span4" data-uuid="{{id}}">
        <div class="relfix">
          <img src="{{thumbnailUrl}}" alt="{{name}}" class="img-polaroid" />
          <p class="absfix">
            <a href="{{editHref}}" class="app btn btn-mini btn-info">Edit</a>
          </p>
        </div>
      </li>
    {{/each}}
    </ul>
  </fieldset>
</form>